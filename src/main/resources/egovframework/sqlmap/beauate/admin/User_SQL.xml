<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.beauate.admin.user.service.UserDao">
	
	<sql id="ugmGubunSql">
		<where>
			<if test="searchKeyword != null and searchKeyword != ''">
				<choose>
					<when test="searchCondition == 'usrNm'">
						AND U_NM LIKE '%'|| #{searchKeyword} ||'%'
					</when>
					<otherwise>
						AND U_SQ LIKE '%'|| #{searchKeyword} ||'%'
					</otherwise>
				</choose>
			</if>
		</where>
	</sql>
	
	<!-- 쿼리명 : 사용자 목록 카운트
	설명 : 사용자 목록 카운트
	수정일                     수정자           수정내용
	==========  ======  ===================
	2019. 5.16     신호석           최초 생성
	작성자 : 신호석
	최초작성일 : 2019. 5.16
	-->	
	<select id="selectUserListCnt" parameterType="userVO" resultType="int">
		<![CDATA[
		SELECT COUNT (*) CNT FROM USERS
		]]>
		<include refid="ugmGubunSql"/>
	</select>
	
	<!-- 쿼리명 : 사용자 목록 리스트
	설명 : 사용자 목록 조회
	수정일                     수정자           수정내용
	==========  ======  ===================
	2019. 5.17     신호석           최초 생성
	작성자 : 신호석
	최초작성일 : 2019. 5.17
	-->
	<select id="selectUserList" parameterType="userVO" resultType="userVO">
		<![CDATA[
		SELECT A.*
		  FROM (SELECT ROW_NUMBER () OVER (
		]]>
		<choose>
			<when test="sortSubject == 'joinDt'">
				ORDER BY JOIN_DT
			</when>
			<when test="sortSubject == 'usrNm'">
				ORDER BY U_NM
			</when>
			<otherwise>
				ORDER BY U_SQ
			</otherwise>
		</choose>
		<choose>
			<when test="sortDescend == 'asc'">
				ASC
			</when>
			<otherwise>
				DESC
			</otherwise>
		</choose>
		<![CDATA[
		  			) RNUM,
				       U_SQ usrId,
				       U_PW usrPw,
				       U_NM usrNm,
				       PHONE_NO mblPno,
				       U_EMAIL emailAddr,
				       JOIN_DT joinDt,
				       LOGIN_DT loginDt,
				       (SELECT C.MCLS_NM FROM COMMON_CD_SCLS C WHERE C.LCLS_CD = 'UST' AND C.MCLS_CD = B.U_ST) as userSt,
				       (SELECT rl_name FROM rl_mng WHERE rl_id = ( SELECT rl_id FROM rl_user_mppg WHERE u_sq = B.u_sq)) as rlName,
				       U_OUT_DT userOutDt
		          FROM USERS B
		]]>
		<include refid="ugmGubunSql"/>
		<![CDATA[
		          ) A
		 WHERE A.RNUM BETWEEN #{firstIndex} AND #{lastIndex}
		]]>
	</select>
	
	<!-- 쿼리명 : 사용자 상세정보
	설명 : 사용자 상세정보
	수정일                     수정자           수정내용
	==========  ======  ===================
	2019. 5.17     신호석           최초 생성
	작성자 : 신호석
	최초작성일 : 2019. 5.17
	-->
	<select id="selectUser" parameterType="userVO" resultType="userVO">
		<![CDATA[
		SELECT B.U_SQ usrId,
		       B.U_PW usrPw,
		       B.U_NM usrNm,
		       B.PHONE_NO mblPno,
		       B.U_EMAIL emailAddr,
		       B.JOIN_DT joinDt,
		       B.LOGIN_DT loginDt,
		       (SELECT C.MCLS_NM FROM COMMON_CD_SCLS C WHERE C.LCLS_CD = 'UST' AND C.MCLS_CD = B.U_ST) as userSt,
		       (SELECT rl_name FROM rl_mng WHERE rl_id = ( SELECT rl_id FROM rl_user_mppg WHERE u_sq = #{usrId})) as rlName,
			   B.U_OUT_DT userOutDt
		  FROM USERS B
		 WHERE B.U_SQ = #{usrId}
		 ]]>
	</select>
	
	<!-- 쿼리명 : 사용자아이디 중복체크
	설명 : 사용자아이디 중복체크
	수정일                     수정자           수정내용
	==========  ======  ===================
	2019. 5.17     신호석           최초 생성
	작성자 : 신호석
	최초작성일 : 2019. 5.17
	-->
	<select id="userIdChk" parameterType="userVO" resultType="int">
		<![CDATA[
		SELECT COUNT(*)
		  FROM USERS B
		 WHERE U_SQ = TRIM(#{usrId})
		 ]]>
	</select>
	
	<!-- 쿼리명 : 사용자 등록
	설명 : 사용자 등록
	수정일                     수정자           수정내용
	==========  ======  ===================
	2019. 5.17     신호석           최초 생성
	작성자 : 신호석
	최초작성일 : 2019. 5.17
	-->
	<insert id="userInsertProc" parameterType="userVO">
		<![CDATA[
		INSERT INTO USERS (	    U_SQ, 
								U_PW, 
		   						U_NM, 
		   						PHONE_NO, 
		   						U_EMAIL, 
		   						JOIN_DT,
		   						LOGIN_DT,
		   						U_ST ) 
					VALUES (	#{usrId},
								#{usrPw}, 
								#{usrNm}, 
								#{mblPno, jdbcType=VARCHAR}, 
								#{emailAddr, jdbcType=VARCHAR}, 
								sysdate,
								sysdate,
								#{userSt})
		]]>		
    </insert>
    
    <!-- 쿼리명 : 사용자 비밀번호 초기화
	설명 : 사용자 비밀번호 초기화
	수정일                     수정자           수정내용
	==========  ======  ===================
	2019. 5.17     신호석           최초 생성
	작성자 : 신호석
	최초작성일 : 2019. 5.17
	-->
	<update id="userPwReset" parameterType="userVO">
		<![CDATA[
		UPDATE USERS
		SET    U_PW  = #{usrPw}
	    WHERE  U_SQ  = #{usrId}
	    ]]>
	</update>
	
	<!-- 쿼리명 : 사용자 수정
	설명 : 사용자 수정
	수정일                     수정자           수정내용
	==========  ======  ===================
	2019. 5.17     신호석           최초 생성
	작성자 : 신호석
	최초작성일 : 2019. 5.17
	-->
	<update id="updateUser" parameterType="userVO">
		<![CDATA[
		UPDATE USERS
		]]>  
		<trim prefix="SET" suffixOverrides=",">
		    <if test='pwChangeGubun == "Y"'>
				U_PW      = #{usrPw},
		    </if>
		    <if test="usrNm != null and  usrNm != ''">
				U_NM      = #{usrNm},
		    </if>
		    <if test="mblPno != null and  mblPno != ''">
				PHONE_NO     = #{mblPno},
		    </if>
	    </trim>
		<![CDATA[    
		WHERE  U_SQ   = #{usrId}
		]]>
    </update>
    
    <!-- 쿼리명 : 사용자 삭제
	설명 : 사용자 삭제
	수정일                     수정자           수정내용
	==========  ======  ===================
	2019. 5.17     신호석           최초 생성
	작성자 : 신호석
	최초작성일 : 2019. 5.17
	-->
    <delete id="updateUserProc" parameterType="userVO">
		<![CDATA[
		UPDATE USERS 
		SET 
			u_email = '',
			join_dt = NULL,
			u_nm = NULL,
			u_pw = NULL,
			phone_no = NULL,
			login_dt = NULL,
			u_st = NULL,
			u_out_dt = SYSDATE
		WHERE 
			u_sq = #{usrId}
		]]>		
    </delete>
    
    <!-- 쿼리명 : 사용자 통계 등록
	설명 : 사용자 통계 등록
	수정일                     수정자           수정내용
	==========  ======  ===================
	2019. 6.22     신호석           최초 생성
	작성자 : 신호석
	최초작성일 : 2019. 6.22
	-->
	<insert id="insertUserStatisticsProc" parameterType="UserStatsVO">
		<![CDATA[
		INSERT INTO ACCESS_LOG
			(ACCESS_LOG_ID,
			ACCESS_IP,
			U_SQ,
			ACCESS_DT) 
		VALUES 		(#{accessLogId},
		             #{accessIp},
		             #{accessId},
		             SYSDATE)
		]]>
	</insert>
	
	<sql id="selectUserStatisticsListWhere">
		<where>
	         A.ACCESS_LOG_ID = B.U_SQ
	         <if test="endDate != null and endDate != ''">
	         	AND TO_CHAR(A.ACCESS_DT, 'YYYY-MM-DD') = #{endDate}
	         </if>
	         <if test="searchKeyword != null and searchKeyword != ''">
	         	<choose>
	         		<when test="searchCondition == 'searchNm'">
	         			AND B.U_NM like '%'|| #{searchKeyword} ||'%'
	         		</when>
	         		<otherwise>
	         			AND A.ACCESS_LOG_ID like '%'|| #{searchKeyword} ||'%'
	         		</otherwise>
	         	</choose>
	         </if> 
		</where>
	</sql>
	
	<!-- 쿼리명 : 사용자 통계 리스트 카운트
	설명 : 사용자 통계 등록
	수정일                     수정자           수정내용
	==========  ======  ===================
	2019. 6.23     신호석           최초 생성
	작성자 : 신호석
	최초작성일 : 2019. 6.23
	-->
	<select id="selectUserStatisticsListCnt" parameterType="UserStatsVO" resultType="int">
		<![CDATA[
		SELECT COUNT(*) cnt
		  FROM (SELECT A.ACCESS_LOG_ID,
		               A.ACCESS_IP,
		               A.ACCESS_DT,
		               B.OG_CD,
		               B.U_NM
		          FROM ACCESS_LOG A, USERS B
		]]>
		<include refid="selectUserStatisticsListWhere"/>
		<![CDATA[
		               )
		]]>
	</select>
	
	<!-- 쿼리명 : 사용자 통계 리스트
	설명 : 사용자 통계 등록
	수정일                     수정자           수정내용
	==========  ======  ===================
	2019. 6.23     신호석           최초 생성
	작성자 : 신호석
	최초작성일 : 2019. 6.23
	-->
	<select id="selectUserStatisticsList" parameterType="UserStatsVO" resultType="UserStatsVO">
		<![CDATA[
		SELECT *
		  FROM (SELECT ROW_NUMBER () OVER (
		]]>
		<choose>
			<when test="sortSubject == 'searchNm'">
				ORDER BY B.U_NM
			</when>
			<when test="sortSubject == 'searchId'">
				ORDER BY A.ACCESS_LOG_ID
			</when>
			<otherwise>
				ORDER BY a.ACCESS_DT
			</otherwise>
		</choose>
		<choose>
			<when test="sortDescend == 'asc'">
				ASC
			</when>
			<otherwise>
				DESC
			</otherwise>
		</choose>
		<![CDATA[  
		  ) rNum,
		               A.ACCESS_LOG_ID AS accessId,
		               A.ACCESS_IP AS accessIp,
		               A.ACCESS_DT AS accessDate,
		               B.U_NM AS usrNm
		          FROM ACCESS_LOG A, USERS B
		]]>
		<include refid="selectUserStatisticsListWhere"/>
		<![CDATA[
		               ) C
		 WHERE C.rNum BETWEEN #{firstIndex} AND #{lastIndex}	
		]]>
	</select>
	
	<!-- 쿼리명 : 사용자 통계 차트 리스트
	설명 : 사용자 통계 등록
	수정일                     수정자           수정내용
	==========  ======  ===================
	2019. 6.23     신호석           최초 생성
	작성자 : 신호석
	최초작성일 : 2019. 6.23
	-->
	<select id="selectUserStatsChartList" parameterType="UserStatsVO" resultType="HashMap">
		<![CDATA[
 		SELECT	TO_CHAR(AC_DATE,'YYYY-MM-DD') AS AC_DATE,
				(SELECT	COUNT(*)
				FROM	ACCESS_LOG
				WHERE	TO_CHAR(ACCESS_DT,'YYYY-MM-DD') = AC_DATE
				) AS AC_CNT
		FROM
			( SELECT	DISTINCT((TO_DATE('${chartDate}','YYYY-MM-DD')+1)-LEVEL) AS AC_DATE,
						LEVEL
			FROM 		ACCESS_LOG
			CONNECT BY LEVEL < 8 )
		ORDER BY AC_DATE ASC
		]]>
	</select>
</mapper>