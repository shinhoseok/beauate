<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.beauate.admin.code.service.BannerDao">

	<select id="selectBannerList" parameterType="bannerVO" resultType="bannerVO">
		<![CDATA[
		SELECT
			banner_id,
			banner_loc,
			banner_order,
			banner_file_nm,
			banner_class_id,
			banner_url
		FROM
			banner
		WHERE 1=1 
		]]>
		<if test="bannerLoc!= null and bannerLoc!=''">
			AND bannerLoc = #{bannerLoc!=}
		</if>
		ORDER BY banner_order
	</select>

</mapper>